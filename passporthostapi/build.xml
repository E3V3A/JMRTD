<project name="jmrtd" default="dist" basedir=".">
	<description>
      JMRTD host API build file
   </description>

	<!-- Global properties for this build -->
	<property name="src" location="src" />
	<property name="build" location="bin" />
	<property name="dist" location="dist" />
	<property name="distlib" location="${dist}/lib" />
	<!-- property name="arch" value="${os.arch}" -->
	<property name="arch" value="i386" />
	<property name="sos-shared-build" location="${basedir}/../sosshared/build"/>

	<property name="bcprov" value="bcprov-*.jar" />

	<property name="jai_imageio" value="jai_imageio.jar" />
	<property name="clibwrapper_jiio" value="clibwrapper_jiio.jar" />
	<property name="libclib_jiio" value="libclib_jiio.*" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />

		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />

		<!-- Create the distribution directory structure -->
		<mkdir dir="${distlib}" />
	</target>

	<target name="compile" depends="init" description="compile the source ">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" />
	</target>

	<target name="extensions" description="copy extensions into distribution">
		<mkdir dir="${distlib}/ext" />
		<mkdir dir="${distlib}/${arch}" />

		<!-- Copy bouncy castle -->

		<copy todir="${distlib}/ext">
			<!-- fileset dir="${java.home}/lib/ext" includes="${bcprov}" / -->
			<fileset dir="${java.home}/lib/ext" includes="${bcprov}" />
		</copy>

		<!-- Copy jai imageio -->

		<copy todir="${distlib}/ext">
			<fileset dir="${java.home}/lib/ext" includes="${jai_imageio}" />
			<fileset dir="${java.home}/lib/ext" includes="${clibwrapper_jiio}" />
		</copy>
		<copy todir="${distlib}/${arch}">
			<fileset dir="${java.home}/lib/${arch}" includes="${libclib_jiio}" />
		</copy>


	</target>

	<target name="dist" depends="extensions, compile, doc" description="generate the distribution">
		<!-- Copy license, etc. -->
		<copy todir="${dist}">
			<fileset dir="." includes="LICENSE, README" />
		</copy>

		<!-- Create the distribution jar file -->
		<jar jarfile="${distlib}/jmrtd.jar">
			<manifest>
				<attribute name="Main-class" value="sos.mrtd.sample.PassportGUI" />
				<attribute name="VMOptions" value="-Xms256M -Xmx256M" />
				<attribute name="Class-path" value="ext/bcprov-jdk16-137.jar ext/jai_imageio.jar" />
			</manifest>
			<fileset dir="${build}/" includes="**/*.class" />
			<fileset dir="${sos-shared-build}" includes="**/*.class"/>
			<fileset dir="." includes="images/jmrtd_icon.png,images/jmrtd.png,images/famfamfam_silk/*.png,images/flags/*.png" />
			<fileset dir="." includes="csca/*.*" />
			<fileset dir="." includes="README,LICENSE" />
		</jar>
	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="doc" description="Generate API docs">
		<javadoc classpath="${sos-shared-build};d:/Software/bcprov-jdk16-139.jar" destdir="apidocs" package="true" doctitle="JMRTD API" windowtitle="JMRTD API" packagenames="sos.mrtd">
			<link href="http://java.sun.com/javase/6/docs/api" />
			<link href="http://www.bouncycastle.org/docs/docs1.6" />
			<!-- link href="http://java.sun.com/products/javacard/htmldoc" / -->
			<sourcepath path="src" />
			<package name="sos.mrtd" />
		</javadoc>
	</target>
</project>
