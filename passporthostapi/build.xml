<project name="jmrtd" default="dist" basedir=".">

	<description>
		JMRTD host API distribution build file
	</description>

	<!-- Global properties for this build -->
	<property name="src" location="src" />
	<property name="build" location="bin" />
	<property name="dist" location="dist" />
	<property name="distlib" location="${dist}/lib" />

	<!-- Would like to use ${os.arch} here, but is set to "x86" instead of "i386"?!? -->
	<property name="arch" value="i386" />

	<!-- Defines IzPack Ant task -->
	<property name="izpackdir" value="c:/Program Files/IzPack" />
	<property name="izpack-standalone-compiler" value="${izpackdir}/lib/standalone-compiler.jar" />
	<taskdef name="izpack"
		classpath="${izpack-standalone-compiler}"
		classname="com.izforge.izpack.ant.IzPackTask" />

	<!-- Defines JSmooth Ant task -->
	<property name="jsmoothdir" value="c:/Program Files/JSmooth 0.9.9-7" />
	<taskdef name="jsmoothgen"
		classpath="${jsmoothdir}/lib/jsmoothgen-ant.jar"
    	classname="net.charabia.jsmoothgen.ant.JSmoothGen" />

	<!-- sosshared class files will be included in main jar -->
	<property name="sos-shared-build" location="${basedir}/../sosshared/build" />

	<!-- bouncy castle will be added as an extensions jar -->
	<property name="bcprovjar" value="d:/Software/bcprov-jdk16-139.jar" />

	<!-- jai_imageio will also be added as an extensions jar -->
	<property name="jai_imageio" value="jai_imageio.jar" />
	<property name="clibwrapper_jiio" value="clibwrapper_jiio.jar" />
	<property name="libclib_jiio" value="libclib_jiio.*" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />

		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />

		<!-- Create the distribution directory structure -->
		<mkdir dir="${distlib}" />
	</target>

	<target name="compile" depends="init" description="compile the source ">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" />
	</target>

	<target name="extensions" description="copy extensions into distribution">

		<mkdir dir="${distlib}/ext" />
		<mkdir dir="${distlib}/${arch}" />

		<!-- Copy bouncy castle -->

		<copy todir="${distlib}/ext">
			<!-- fileset dir="${java.home}/lib/ext" includes="${bcprov}" / -->
			<!-- fileset dir="${java.home}/lib/ext" includes="${bcprov}" / -->
			<fileset file="${bcprovjar}" />
		</copy>

		<!-- Copy jai imageio -->

		<copy todir="${distlib}/ext">
			<fileset dir="${java.home}/lib/ext" includes="${jai_imageio}" />
			<fileset dir="${java.home}/lib/ext" includes="${clibwrapper_jiio}" />
		</copy>
		<copy todir="${distlib}/${arch}">
			<fileset dir="${java.home}/lib/${arch}" includes="${libclib_jiio}" />
		</copy>

	</target>

	<target name="dist" depends="extensions, compile, doc" description="generate the distribution">

		<!-- Copy license, etc. -->
		<copy todir="${dist}">
			<fileset dir="." includes="LICENSE, README" />
		</copy>

		<!-- Create the distribution jar file -->
		<jar jarfile="${distlib}/jmrtd.jar">
			<manifest>
				<attribute name="Main-class" value="org.jmrtd.app.PassportApp" />
				<attribute name="VMOptions" value="-Xms256M -Xmx256M" />
				<attribute name="Class-path" value="ext/bcprov-jdk16-139.jar ext/jai_imageio.jar" />
			</manifest>
			<fileset dir="${build}/" includes="**/*.class" />
			<fileset dir="${sos-shared-build}" includes="**/*.class"/>
			<fileset dir="." includes="images/jmrtd_icon.png,images/jmrtd.png,images/famfamfam_silk/*.png,images/flags/*.png" />
			<fileset dir="." includes="csca/*.*" />
			<fileset dir="." includes="README,LICENSE" />
		</jar>
		
		<!-- Use IzPack to create the installer jar -->
		<izpack
				input="jmrtd_installer.xml"
				output="jmrtd_installer.jar"
				basedir="${basedir}"
				izpackdir="${izpackdir}" />

		<!-- Use JSmooth to create a Windows executable from the installer jar -->
		<jsmoothgen
			project="jmrtd_installer.jsmooth" 
			skeletonroot="${jsmoothdir}/skeletons" />

	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="doc" description="Generate API docs">
		<javadoc classpath="${sos-shared-build};${bcprovjar}" destdir="apidocs" package="false" doctitle="JMRTD API 0.4.1" windowtitle="JMRTD API 0.4.1" packagenames="sos.mrtd">
			<link href="http://java.sun.com/javase/6/docs/api" />
			<link href="http://www.bouncycastle.org/docs/docs1.6" />
			<!-- link href="http://java.sun.com/products/javacard/htmldoc" / -->
			<sourcepath path="src" />
			<package name="sos.mrtd" />
		</javadoc>
	</target>

</project>
